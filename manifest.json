{
    "manifest_version": 3,
    "name": "EchoMind - Web Audio Transcriber",
    "version": "1.3",
    "description": "Record web audio, transcribe it, and process it using AI.",
    "permissions": ["activeTab", "storage", "tabCapture"],
    "host_permissions": [
      "*://api.groq.com/*",
      "*://api.cerebras.ai/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
      }
    },
    "options_ui": {
      "page": "settings.html",
      "open_in_tab": false
    }
  }
  